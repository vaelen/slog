(import scheme)
(import srfi-1)
(import srfi-13)

(import uri-common)
(import http-client)

;; Query the given URL as set the default input port to read the result.
(define (with-http-get url thunk)
  (with-input-from-request url #f thunk))

;; Return a URI escaped string for the given alist of key/value pairs
(define (uri-escape params)
  (form-urlencode params separator: "&"))
